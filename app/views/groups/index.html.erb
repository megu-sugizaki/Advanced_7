<!--groupsのindex-->
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render books: 'books/form', locals: { book: @book } %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Groups</h2>
          <table class='table'>
              <thead>
                <tr>
                  <th></th>
                  <th>グループ名</th>
                  <th>紹介文</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @groups.each do |group| %>
                  <tr>
                    <td>
                      <% if group.group_image.attached? %>
                      <%= image_tag group.group_image, size:"50x50" %>
                      <% else %>
                      <%= image?tag 'no_image', size: "50x50" %>
                      <% end %>
                    </td>
                    <td><%= link_to group.name, group_path(group) %></td>
                    <td><%= group.introduction %></td>
                        <% if group.is?owned?by?(current_user) %>
                        <td>
                        <%= link_to 'Edit', edit_group_path(group), class: "group_#{group.id} btn btn-success" %>
                        </td>
                        <% end %>
                  </tr>
                <% end %>
              </tbody>
        </table>
    </div>
  </div>
</div>